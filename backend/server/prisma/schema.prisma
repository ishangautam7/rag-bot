generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ApplicationLog {
  id          Int      @id @default(autoincrement())
  session_id  String
  user_query  String
  ai_response String
  model       String
  created_at  DateTime @default(now())

  @@map("application_logs")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  username  String?
  
  password  String?  
  googleId  String?  @unique 
  avatar    String?  
  isAdmin   Boolean  @default(false)
  
  allowedModels String[] @default(["openrouter/auto"])
  
  resetToken        String?
  resetTokenExpires DateTime?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  sessions       Session[]
  memberships    SessionMember[]
  sentMessages   Message[]
  folders        Folder[]
  activityLogs   ActivityLog[]
  promptTemplates PromptTemplate[]
  usageLogs      UsageLog[]
}

// Chat organization folders
model Folder {
  id        String    @id @default(uuid())
  name      String
  color     String    @default("#6b7280")
  
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  sessions  Session[]
  
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  @@index([userId])
}

model Session {
  id        String    @id @default(uuid())
  title     String?   @default("New Chat") 
  status    ChatStatus @default(ACTIVE)
  
  // Pinning & Organization
  isPinned  Boolean   @default(false)
  folderId  String?
  folder    Folder?   @relation(fields: [folderId], references: [id], onDelete: SetNull)
  
  // Sharing
  isPublic    Boolean   @default(false)
  shareToken  String?   @unique
  sharedAt    DateTime?
  
  // Group Chat
  isGroupChat Boolean   @default(false)
  
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  messages  Message[]
  members   SessionMember[]

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  @@index([userId])
  @@index([shareToken])
  @@index([folderId])
}

model SessionMember {
  id        String   @id @default(uuid())
  
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  role      MemberRole @default(MEMBER)
  joinedAt  DateTime   @default(now())
  
  @@unique([sessionId, userId])
  @@index([sessionId])
  @@index([userId])
}

model Message {
  id        String   @id @default(uuid())
  content   String   @db.Text 
  role      Role    
  
  metadata  Json?    
  
  // Thread support (reply to message)
  parentId  String?
  parent    Message?  @relation("MessageThread", fields: [parentId], references: [id], onDelete: SetNull)
  replies   Message[] @relation("MessageThread")
  
  // RAG source citations
  sources   Json?
  
  // Response time metrics (ms)
  responseMs Int?
  
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  // Sender for group chats (null for AI messages)
  senderId  String?
  sender    User?    @relation(fields: [senderId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  
  @@index([sessionId])
  @@index([senderId])
  @@index([parentId])
}

// User activity tracking
model ActivityLog {
  id        String   @id @default(uuid())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  action    String   // LOGIN, LOGOUT, CREATE_CHAT, SEND_MESSAGE, DELETE_CHAT, etc.
  details   Json?    // Additional context
  ipAddress String?
  userAgent String?
  
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([action])
  @@index([createdAt])
}

// Prompt templates
model PromptTemplate {
  id          String  @id @default(uuid())
  name        String
  prompt      String  @db.Text
  category    String  @default("general")
  description String?
  
  // null userId = system/default template
  userId      String?
  user        User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  
  @@index([userId])
  @@index([category])
}

enum Role {
  USER
  ASSISTANT
  SYSTEM
}

enum ChatStatus {
  ACTIVE
  ARCHIVED
  DELETED
}

enum MemberRole {
  OWNER
  MEMBER
}

model UsageLog {
  id        String   @id @default(uuid())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  date      String   
  
  freeMessageCount Int @default(0)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([userId, date])
  @@index([userId])
}
